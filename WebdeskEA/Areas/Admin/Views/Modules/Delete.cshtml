@model CompanyDto
<div class="page-header">
    <div class="page-title">
        <h4>User</h4>
        <h6>Delete User</h6>
    </div>
</div>

<div class="card">

    @*____ Hidden Properties ___*@
    <input type="hidden" asp-for="Id"/>

    <div class="card-body">
        <div class="row">
            <form method="post">
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label>Company Name</label>
                        <input type="text" asp-for="Name">
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="Email">Company Email</label>
                        <input type="text" asp-for="Email">
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="Phone">Company Phone</label>
                        <input type="text" asp-for="Phone">
                    </div>
                </div>
                <div class="col-lg-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="Address">Address</label>
                        <input type="text" asp-for="Address">
                    </div>
                </div>
                <div class="col-lg-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="Description">Description</label>
                        <input type="text" asp-for="Description">
                    </div>
                </div>
                <div class="col-lg-12">
                    <button class="btn btn-submit me-2">Submit</button>
                    <a class="btn btn-cancel" id="bt">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

