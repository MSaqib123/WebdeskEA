@model CompanyDto
<div class="page-header">
    <div class="page-title">
        <h4>Company Add</h4>
        <h6>Create new Company</h6>
    </div>
</div>

<div class="card">

    @*____ Hidden Properties ___*@
    <input type="hidden" asp-for="Id"/>

    <div class="card-body">
        <form method="post">
            <div class="row">
                <div class="col-lg-4 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="Name">Company Name</label>
                        <input type="text" class="form-control" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="Email">Company Email</label>
                        <input type="text" class="form-control" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="Phone">Company Phone</label>
                        <input type="text" class="form-control" asp-for="Phone">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="Address">Address</label>
                        <input type="text" class="form-control" asp-for="Address">
                    </div>
                </div>
                <div class="col-lg-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="Description">Description</label>
                        <input type="text" class="form-control" asp-for="Description">
                    </div>
                </div>
                <div class="col-lg-12">
                    <button class="btn btn-submit me-2">Submit</button>
                    <a asp-action="Index" class="btn btn-cancel">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

